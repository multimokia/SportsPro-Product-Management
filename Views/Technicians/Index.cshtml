@model IEnumerable<assignment1.Models.Technician>

@{
    ViewData["Title"] = "Technicians Page";
}

<h1>Technicians</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Email Address
            </th>
            <th>
                Phone Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TechnicianId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TechnicianId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TechnicianId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<button type="button">
    <a asp-action="Create">Create New</a>
</button>
