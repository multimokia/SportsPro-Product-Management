@model IEnumerable<assignment1.Models.Technician>

@{
    ViewData["Title"] = "Technicians Page";
}

  <div class="jumbotron jumbotron-fluid">
  <div class="container" data-aos="fade-in  " data-aos-delay="200" data-aos-duration="1500">
     <img src="https://img.icons8.com/nolan/64/workers-male.png"   style="width:50px; margin: 10px auto; display:block;"/>
    <h1 class="title-custom display-4">TECHNICIANS</h1>
    <p class="lead" style="text-align:center;"> When the user clicks the Manage Technicians link on the Home page or the Technicians link in the navbar, the 
application should display the Technician Manager page.</p>
  </div>
</div>


<div class="container">
           @if(TempData["AlertMessage-successful"] != null)
{
    <div class = "alert alert-success">
        @TempData["AlertMessage-successful"]
        <button type="button" class = "close" data-dismiss="alert">
            <span>&times;</span>
            @*<span>x</span>*@
        </button>
    </div>   
}

@if (TempData["AlertMessage-important"] != null)
{
 <div class = "alert alert-info">
        @TempData["AlertMessage-important"]
        <button type="button" class = "close" data-dismiss="alert">
            <span>&times;</span>
            @*<span>x</span>*@
        </button>
    </div>     
}
@if (TempData["AlertMessage-delete"] != null)
{
<div class = "alert alert-danger">
        @TempData["AlertMessage-delete"]
        <button type="button" class = "close" data-dismiss="alert">
            <span>&times;</span>
            @*<span>x</span>*@
        </button>
        </div>    
}
<br/>
    <p>
    <a class="btn btn-primary btn-md" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Email Address
            </th>
            <th>
                Phone Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.TechnicianId">Edit</a> 
                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.TechnicianId">Details</a> 
                <a class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@item.TechnicianId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>

