@model IEnumerable<assignment1.Models.Product>

@{
    ViewData["Title"] = "Products Page";
}
<div class="jumbotron jumbotron-fluid">
    <div class="container" data-aos="fade-in  " data-aos-delay="200" data-aos-duration="1500">
        <img src="https://img.icons8.com/external-fauzidea-gradient-fauzidea/64/000000/external-sport-back-to-school-fauzidea-gradient-fauzidea.png"
            style="width:50px; margin: 10px auto; display:block;" />
        <h1 class="title-custom display-4">PRODUCTS</h1>
        <p class="lead" style="text-align:center;"> When the user clicks on the Manage Products link on the Home Page,
            or the Products link in the navbar,
            the application should display the Product Manager page</p>
    </div>
</div>


<div class="container">
    @if (TempData["AlertMessage-successful"] != null)
    {
        <div class="alert alert-success">
            @TempData["AlertMessage-successful"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
                @*<span>x</span>*@
            </button>
        </div>
    }

    @if (TempData["AlertMessage-important"] != null)
    {
        <div class="alert alert-info">
            @TempData["AlertMessage-important"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
                @*<span>x</span>*@
            </button>
        </div>
    }
    @if (TempData["AlertMessage-delete"] != null)
    {
        <div class="alert alert-danger">
            @TempData["AlertMessage-delete"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
                @*<span>x</span>*@
            </button>
        </div>
    }


    <br />

    <p>
        <a class="btn btn-primary btn-md" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Code
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Yearly Price
                </th>
                <th>
                    Release Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearlyPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                        <a class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
