@model assignment1.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="title-custom display-4">Create new product</h1>
        <p class="lead" style="text-align:center;">Please enter the product and hit the create button. If you do not
            want, hit the go back button</p>
    </div>
</div>

<div class="container form_box card" style="border:none;box-shadow:none; ">
    <h4 class="text-center mb-4">Product</h4>
    <hr />
    <br />


    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row justify-content-between text-left form_wrapper" style="width: 550px; margin: 0 auto;">
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Product code</label>
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearlyPrice" class="control-label">Yearly price</label>
                <input asp-for="YearlyPrice" class="form-control" />
                <span asp-validation-for="YearlyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label">Release date</label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>

            <div class="form-group button_center">
                <input type="submit" class=" btn btn-form" value="Create" style="margin:0.5rem;" />
                <button type="button" class=" btn btn-form" style="margin:0.5rem;">
                    <a asp-action="Index">Back to List</a>
                </button>
            </div>
        </div>


    </form>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
