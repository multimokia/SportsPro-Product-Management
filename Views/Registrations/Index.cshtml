@model IEnumerable<assignment1.Models.Registration>

@{
    ViewData["Title"] = "Registrations";
}
  <div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h4 class="text-center mb-4">Get Customer</h4>
  </div>
<div class="row justify-content-between text-left form_wrapper">
            <div class="form-group col-6 flex-column d-flex">
                <label asp-for="CustomerId" class="control-label"></label>
                <select class="form-select" asp-for="CustomerId" asp-items="@ViewBag.Customers">
                    <option value="">Select a customer</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

</div>
