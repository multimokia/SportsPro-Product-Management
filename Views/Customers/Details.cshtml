@model assignment1.Models.Customer

@{
    ViewData["Title"] = "Details";
}

 <div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="title-custom display-4">Customer Details</h1>
    <p class="lead" style="text-align:center;">Customer information page.  If do you want to edit, just hit edit button.</p>
</div>
</div>


<div class="container">
 
        <div class = "wrapper d-flex justify-content-center">
           <div class="profile_photo"></div>
         </div>

            <h4 style="text-align:center;">Customer</h4>
            <hr />

    <dl class="row wrapper">
        <dt class = "col-sm-6 d-flex justify-content-right">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-6 d-flex justify-content-left">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-6 d-flex justify-content-right">
            Street Address
        </dt>
        <dd class = "col-sm-6 d-flex justify-content-left">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt class = "col-sm-6 d-flex justify-content-right">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-6 d-flex justify-content-left">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-6 d-flex justify-content-right">
            Postal Code
        </dt>
        <dd class = "col-sm-6 d-flex justify-content-left">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class = "col-sm-6 d-flex justify-content-right">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-6 d-flex justify-content-left">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class = "col-sm-6 d-flex justify-content-right">
            Email Address
        </dt>
        <dd class = "col-sm-6 d-flex justify-content-left">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class = "col-sm-6 d-flex justify-content-right">
            Phone Number
        </dt>
        <dd class = "col-sm-6 d-flex justify-content-left">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
            <div class="form-group button_center">
                  <button type="button" class=" btn btn-form" style="margin:0.5rem;">
                        <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit</a> 
                  </button>                  
                  
                  <button type="button" class=" btn btn-form" style="margin:0.5rem;">
                       <a asp-action="Index" >Back to List</a>
                  </button>
            </div>
</div>

